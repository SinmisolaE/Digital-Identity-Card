{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "issuer-route": {
        "RateLimiterPolicy": "fixed-issuer",
        "ClusterId": "issuer-cluster",
        "Match": {
          "Path": "/issuer/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "/{**catch-all}"}
        ]
      },
      "verifier-route": {
        "RateLimiterPolicy": "fixed",
        "ClusterId": "verifier-cluster",
        "Match": {
          "Path": "/verifier/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "/{**catch-all}"}
        ]
      },
      "trust-registry-route": {
        "RateLimiterPolicy": "fixed",
        "ClusterId": "trust-registry-cluster",
        "Match": {
          "Path": "/trust-registry/{**catch-all}"
        },
        "Transforms": [
          {"PathPattern": "/{**catch-all}"}
        ]
      }
    },
    "Clusters": {
      "issuer-cluster": {
        "Destinations": {
          "Server1": {
            "Address": "http://issuer:80/"
          }
        }
      },
      "verifier-cluster": {
        "Destinations": {
          "Server1": {
            "Address": "http://verifier:80/"
          }
        }
      },
      "trust-registry-cluster": {
        "Destinations": {
          "Server1": {
            "Address": "http://trust-registry:80/"
          }
        }
      }
    }

  }
}
